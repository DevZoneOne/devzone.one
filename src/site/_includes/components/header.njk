{% set collectionName = "main-" + page.lang %}
{% set pages = collections[collectionName] | eleventyNavigation %}
<header>
    <nav class="header-nav">
        <ul role="list" class="nav-list">
            {%- for entry in pages %}
                <li {% if entry.url == page.url %} class="active" {% endif %}>
                    <a href="{{ entry.url | url }}">{{ entry.title }}</a>
                </li>
            {%- endfor %} 
        </ul>
    </nav>
</header>