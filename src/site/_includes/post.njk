---
layout: base
class: post
---

<article>

    <h1>{{ title }}</h1>
    {{ content | toc | safe }}
    <div class="post-metadata-time">
        Last updated: <time datetime="{{ page.date | htmlDateString }}">{{ page.date | readableDate }}</time>
    </div>
    <ul role="list" class="post-metadata-tags">
        <li>Tags:</li>
        {%- for tag in tags | filterTagList %}
            {%- set tagUrl %}/tags/{{ tag | slugify }}/{% endset %}
            <li>
                <a href="{{ tagUrl }}" class="post-tag">{{ tag }}</a>
            </li>
            {%- if not loop.last %}<li>Â·</li>{% endif %}
        {%- endfor %}
    </ul> 
    {{ content | safe }}
    
</article>
