---
metadata:
    url: {{ manifest.url }}
---
<!doctype html>
<html lang="en">
  {% include 'components/head' %}
  <body>
    <div class="page-layout">
      {% include 'components/header' %}
      {% include 'components/nav' %}
      <main {% if draft %}draft{% endif %}
        class="main--{{ layout }} main--{{ page.fileSlug }}">
        <div class="draft warning">This website is under construction</div>
        {{ content }}
      </main>
      {% include 'components/footer' %}
    </div>
  </body>
</html>
